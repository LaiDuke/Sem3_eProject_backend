@model IEnumerable<Sem3_backend.Models.Travel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Bredcrumbs {
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Travels")">Travels List</a>
    </li>
}

<h2>Travels List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TouristSportId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="http://res.cloudinary.com/a123abc/image/upload/@item.ImageUrl" style="width:150px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TouristSportId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TravelId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TravelId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TravelId })
        </td>
    </tr>
}


</table>
