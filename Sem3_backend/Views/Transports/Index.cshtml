@model PagedList.IPagedList<Sem3_backend.Models.Transport>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Bredcrumbs {
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Transports")">All Transports</a>
    </li>
}

<h2>All Transports</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Travel Name
        </th>
        <th>
            Transport Name
        </th>
        <th>
            Transport Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Travel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="http://res.cloudinary.com/a123abc/image/upload/@item.ImageUrl" style="width:150px;" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TransportID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TransportID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TransportID })
            </td>
        </tr>
    }

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))